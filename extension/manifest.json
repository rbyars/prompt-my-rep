{
  "manifest_version": 3,
  "name": "Prompt My Rep",
  "version": "1.1",
  "description": "Save news articles to generate constituent letters.",
  "permissions": ["activeTab", "scripting", "cookies"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://prompt-my-rep.vercel.app/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}